#!/bin/bash

## Description: Install WordPress with DDEV and optionally import Test Content
## Usage: wp-install
## Example: ddev wp-install

set -e

# Ensure WordPress core exists
if ! [ -f wp-load.php ]; then
  echo "ðŸ“¦ Downloading WordPress core..."
  wp core download
fi

# Check if already installed
if wp core is-installed 2>/dev/null; then
  echo "âœ… WordPress is already installed."
  read -p "ðŸš€ Do you want to update WordPress core to the latest version? (y/n): " UPDATE_CORE
  if [[ "$UPDATE_CORE" =~ ^[Yy]$ ]]; then
    wp core update --quiet
    echo "âœ… WordPress core updated successfully!"
  else
    echo "ðŸ‘Œ Leaving existing WordPress as-is."
  fi
  exit 0
fi

# Get Git info for YOLO mode
GIT_NAME=$(git config --global user.name)
GIT_EMAIL=$(git config --global user.email)

# Get project name for YOLO mode
PROJECT_NAME=${DDEV_SITENAME}

echo ""
echo "Select install mode:"
select MODE in "YOLO (auto-install with Git info)" "Details (prompt for each field)" "Exit"; do
  case $MODE in
    "YOLO (auto-install with Git info)")
      echo "ðŸ”¥ YOLO mode selected. Installing with project-based defaults..."

      ADMIN_PASS=$(LC_ALL=C tr -dc 'A-Za-z0-9!@#$%&*' </dev/urandom | head -c 16)
      ADMIN_PASS=${ADMIN_PASS:-admin123}

      wp core install \
        --url="https://${DDEV_PRIMARY_URL}" \
        --title="${PROJECT_NAME}" \
        --admin_user=admin \
        --admin_password="${ADMIN_PASS}" \
        --admin_email="${GIT_EMAIL:-admin@example.com}"

      echo ""
      echo "âœ… WordPress installed in YOLO mode!"
      echo "ðŸ” Admin credentials:"
      echo "   Username: admin"
      echo "   Password: ${ADMIN_PASS}"
      echo ""
      echo "ðŸ“¢ Please copy and store this password securely â€” you won't see it again!"
      echo ""
      break
      ;;
    "Details (prompt for each field)")
      echo "ðŸ›  Details mode selected."

      read -p "Site Title [DDEV WP Site]: " SITE_TITLE
      SITE_TITLE=${SITE_TITLE:-DDEV WP Site}

      read -p "Admin Username [admin]: " ADMIN_USER
      ADMIN_USER=${ADMIN_USER:-admin}

      read -s -p "Admin Password [admin]: " ADMIN_PASS
      ADMIN_PASS=${ADMIN_PASS:-admin}
      echo ""

      read -p "Admin Email [admin@example.com]: " ADMIN_EMAIL
      ADMIN_EMAIL=${ADMIN_EMAIL:-admin@example.com}

      echo ""
      echo "Installing WordPress with:"
      echo "  Title:       $SITE_TITLE"
      echo "  Admin User:  $ADMIN_USER"
      echo "  Admin Email: $ADMIN_EMAIL"
      echo ""

      wp core install \
        --url="https://${DDEV_PRIMARY_URL}" \
        --title="${SITE_TITLE}" \
        --admin_user="${ADMIN_USER}" \
        --admin_password="${ADMIN_PASS}" \
        --admin_email="${ADMIN_EMAIL}"
      break
      ;;
    "Exit")
      echo "ðŸ‘‹ Exiting installer."
      exit 0
      ;;
    *)
      echo "âŒ Invalid option, please choose 1, 2, or 3."
      exit 1
      ;;
  esac
done

# Import Test Content
echo ""
read -p "ðŸ“š Do you also want to import test content? (y/n): " IMPORT_TEST
if [[ "$IMPORT_TEST" =~ ^[Yy]$ ]]; then
  echo "ðŸš€ Importing test content..."
  /mnt/ddev_config/commands/web/wp-test-content
else
  echo "ðŸ‘Œ Skipping test content import."
  echo ""
  echo "ðŸŒŽ Your site is ready at: ${DDEV_PRIMARY_URL}"
fi